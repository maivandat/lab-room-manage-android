<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="@dimen/margin_5"
    android:background="@drawable/custom_border"
    android:padding="@dimen/left_rc_10"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="wrap_content">

    <View
        android:layout_gravity="center"
        android:background="@drawable/custom_point_blue"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"/>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/left_rc_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black_status"
                    android:text="Name Work"
                    android:textSize="@dimen/margin_15"
                    android:id="@+id/tv.nameWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="@dimen/margin_5"
                    android:textSize="12dp"
                    android:id="@+id/tv.timeWork"
                    android:text="Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/linear.handler"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_delete"
                    android:id="@+id/ib.delete"
                    android:layout_width="@dimen/margin_35"
                    android:layout_height="@dimen/margin_35" />

            </LinearLayout>
        </FrameLayout>



</LinearLayout>